<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- CardView untuk Pencatatan Keuangan -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#CDDC39">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pencatatan Keuangan"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Input untuk Pencatatan Keuangan -->

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFinancialRecord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Log Finance"
                    android:inputType="text" />

                <Button
                    android:id="@+id/btnAddFinancialRecord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tambah Pencatatan"
                    android:backgroundTint="@color/black"/>

                <!-- Menampilkan Pencatatan Keuangan yang sudah ditambahkan -->
                <TextView
                    android:id="@+id/tvFinancialRecords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Pencatatan akan tampil disini"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView untuk Memo -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#CDDC39">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Memo"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Input untuk Memo -->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMemo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan memo"
                    android:inputType="text" />

                <Button
                    android:id="@+id/btnAddMemo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tambah Memo"
                    android:backgroundTint="@color/black"/>

                <!-- Menampilkan Memo yang sudah ditambahkan -->
                <TextView
                    android:id="@+id/tvMemo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Memo akan tampil disini"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
